<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>Dashboard</servlet-name>
        <servlet-class>com.example.CategoryAsm.Controller.DashboardController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Dashboard</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ListProduct</servlet-name>
        <jsp-file>/admin/views/product/list.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListProduct</servlet-name>
        <url-pattern>/admin/product/list</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>FromProduct</servlet-name>
        <jsp-file>/admin/views/product/from.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>FromProduct</servlet-name>
        <url-pattern>/admin/product/from</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateProduct</servlet-name>
        <jsp-file>/admin/views/product/update.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateProduct</servlet-name>
        <url-pattern>/admin/product/update</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ListCategory</servlet-name>
        <jsp-file>/admin/views/category/list.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListCategory</servlet-name>
        <url-pattern>/admin/category/list</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>FromCategory</servlet-name>
        <jsp-file>/admin/views/category/from.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>FromCategory</servlet-name>
        <url-pattern>/admin/category/from</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateCategory</servlet-name>
        <jsp-file>/admin/views/category/from.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateCategory</servlet-name>
        <url-pattern>/admin/category/update</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>AddCartServlet</servlet-name>
        <servlet-class>com.example.CategoryAsm.Controller.Shoppingcart.AddCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddCartServlet</servlet-name>
        <url-pattern>/shopping-cart/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SubCartServlet</servlet-name>
        <servlet-class>com.example.CategoryAsm.Controller.Shoppingcart.SubCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SubCartServlet</servlet-name>
        <url-pattern>/shopping-cart/sub</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GetCartServlet</servlet-name>
        <servlet-class>com.example.CategoryAsm.Controller.Shoppingcart.GetCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetCartServlet</servlet-name>
        <url-pattern>/shopping-cart/get</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RemoveCartServlet</servlet-name>
        <servlet-class>com.example.CategoryAsm.Controller.Shoppingcart.RemoveCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RemoveCartServlet</servlet-name>
        <url-pattern>/shopping-cart/remove</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.example.CategoryAsm.Controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>adminfilter</filter-name>
        <filter-class>com.example.CategoryAsm.filterdemo.AdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>adminfilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
        <url-pattern>/admin/**</url-pattern>
    </filter-mapping>

</web-app>