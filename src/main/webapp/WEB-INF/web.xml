<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>Dashboard</servlet-name>
        <servlet-class>com.example.CategoryAsm.Controller.Admin.DashboardController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Dashboard</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ListProduct</servlet-name>
        <jsp-file>/admin/views/product/list.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListProduct</servlet-name>
        <url-pattern>/admin/product/list</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>FromProduct</servlet-name>
        <jsp-file>/admin/views/product/from.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>FromProduct</servlet-name>
        <url-pattern>/admin/product/from</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ListCategory</servlet-name>
        <jsp-file>/admin/views/category/list.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListCategory</servlet-name>
        <url-pattern>/admin/category/list</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>FromCategory</servlet-name>
        <jsp-file>/admin/views/category/from.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>FromCategory</servlet-name>
        <url-pattern>/admin/category/from</url-pattern>
    </servlet-mapping>
</web-app>